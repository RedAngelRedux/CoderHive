@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="hero overlay inner-page bg-primary py-3">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center pt-3">
            <div class="col-lg-6">
                <h1 class="heading text-white mb-1" data-aos="fade-up">@ViewData["Title"]</h1>
            </div>
        </div>
    </div>
</div>

<section class="section bg-light">
    <div class="container">
        <div class="row align-items-stretch retro-layout">
            <div class="col-12 col-md-6" data-aos="fade-up" data-aos-delay="200">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                    <h2>Create a new account.</h2>
                    <hr />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3 form-group">
                        <input asp-for="Input.FirstName" class="form-control" placeholder="First Name" autocomplete="off" aria-required="true" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <input asp-for="Input.LastName" class="form-control" placeholder="Last Name" autocomplete="off" aria-required="true" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <input asp-for="Input.DisplayName" class="form-control" placeholder="Display Name" autocomplete="off" aria-required="true" />
                        <span asp-validation-for="Input.DisplayName" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <input asp-for="Input.Email" class="form-control" placeholder="Email" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <input asp-for="Input.Password" class="form-control" placeholder="Password" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="Input.ImageFile" class="control-label custom-file-label"></label>
                        <input asp-for="Input.ImageFile" type="file" class="form-control-file custom-file-input" accept=".png, .jpg, .bmp, .tiff, .gif, .svg" />
                    </div>
                    <div class="mb-3">
                        <button id="registerSubmit" type="submit" class="btn btn-primary">Register</button>
                    </div>
                </form>
            </div>
            <div class="col-12 col-md-6" data-aos="fade-up" data-aos-delay="100">
                <section>
                    <h3>Use another service to register.</h3>
                    <hr />
                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div>
                                <p>
                                    There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                        article
                                        about setting up this ASP.NET application to support logging in via external services
                                    </a>.
                                </p>
                            </div>
                        }
                        else
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                <div>
                                    <p>
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                        }
                                    </p>
                                </div>
                            </form>
                        }
                    }
                </section>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
















